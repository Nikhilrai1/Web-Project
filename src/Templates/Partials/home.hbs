<!-- Header -->
<div class="container main-header">
    <div class="row">
        <div class="col-md-6 header-left">
            <p>Welcome to weather app</p>
            <div class="info">
                <h1>Get The Latest <span class="weather-name">Weather</span> Info Of Your City</h1>
                <a href="/weather"><button class="btn btn-primary">Check Now</button></a>
            </div>
        </div>
        <div class="col-md-6 header-right">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active img-box">
                        <img class="w-100" src="images/img1.png" alt="First slide">
                    </div>
                    <div class="carousel-item img-box">
                        <img class="w-100" src="images/img2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item img-box">
                        <img class="w-100" src="images/img5.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>